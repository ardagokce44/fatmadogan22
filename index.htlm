    }

    input {
      padding: 10px;
      font-size: 18px;
      border-radius: 10px;
      border: none;
      text-align: center;
    }

    #content {
      display: none;
      text-align: center;
    }

    .image-container {
      display: flex;
      justify-content: center;
      gap: 25px;
      margin-top: 30px;
    }

    .image-container img {
      width: 180px;
      height: 180px;
      border-radius: 20px;
      animation: rgbBorder 2s linear infinite;
      border: 5px solid;
    }

    @keyframes rgbBorder {
